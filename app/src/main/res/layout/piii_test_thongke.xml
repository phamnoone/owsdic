<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffffff">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffffff"
        android:layout_margin="15dp">

        <Space
            android:layout_width="20px"
            android:layout_height="20px" />

        <TextView
            android:id="@+id/quetion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số câu hỏi : "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="18sp"
            android:textColor="#ff000000" />

        <TextView
            android:id="@+id/trueans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số câu đúng :"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/flauseans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số câu sai : "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ffff0115"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/nullans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số câu chưa trả lời : "
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#ff747474"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Chi tiết"
            android:id="@+id/textView18"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp" />

        <GridView
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:numColumns="5"
            android:layout_margin="15dp" />

    </LinearLayout>
</LinearLayout>
