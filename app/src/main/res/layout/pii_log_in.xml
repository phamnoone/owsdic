<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.hongb_000.dictionaryows.PII.LogIn"
    android:id="@+id/activity_main">


    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtEmailLogin"
        android:layout_below="@+id/textView15"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:id="@+id/bntLogin"
        android:background="#ffd39e"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/login_with_facebook"
        android:layout_alignEnd="@+id/login_with_facebook" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_with_facebook"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_with_facebook"
        android:layout_below="@+id/bntLogin"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <com.google.android.gms.common.SignInButton
        android:id="@+id/login_with_google"
        android:text="@string/login_with_google"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_with_facebook"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:background="@null" />

    <Button
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng kí"
        android:id="@+id/bntSignUpMain"
        android:layout_marginBottom="28dp"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/login_with_google"
        android:layout_alignEnd="@+id/login_with_google" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtPassLogin"
        android:layout_below="@+id/space23"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email:"
        android:id="@+id/textView15"
        android:layout_marginTop="59dp"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật khẩu:"
        android:id="@+id/textView16"
        android:layout_above="@+id/txtPassLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="20dp" />

    <Space
        android:layout_width="40px"
        android:layout_height="70px"
        android:layout_below="@+id/txtEmailLogin"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space23" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nếu chưa có tài khoản, bạn có thể đăng kí tại đây"
        android:id="@+id/textView17"
        android:textSize="16dp"
        android:layout_above="@+id/bntSignUpMain"
        android:layout_alignRight="@+id/bntSignUpMain"
        android:layout_alignEnd="@+id/bntSignUpMain" />


    <!--<com.facebook.login.widget.ProfilePictureView-->
        <!--android:layout_width="70dp"-->
        <!--android:layout_height="70dp"-->
        <!--android:id="@+id/avatar"></com.facebook.login.widget.ProfilePictureView>-->


</RelativeLayout>
