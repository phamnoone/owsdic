<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@null">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/space16"
        android:layout_toLeftOf="@+id/space36"
        android:layout_toStartOf="@+id/space36"
        android:layout_below="@+id/space17"
        android:id="@+id/linearLayout7">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Name"
            android:id="@+id/txtNameQuestion"
            android:textSize="20dp"
            android:textColor="#1f1f1f"
            android:textStyle="bold"
            android:layout_below="@+id/space16"
            android:layout_toRightOf="@+id/space16"
            android:layout_toEndOf="@+id/space16"
            android:layout_weight="9"
            android:background="#ffffffff" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:id="@+id/textView2"
            android:layout_weight="9"
            android:background="#ffffffff" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="#ffffffff" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Question"
            android:id="@+id/txtQuestion"
            android:textSize="18dp"
            android:layout_below="@+id/space21"
            android:layout_toRightOf="@+id/space21"
            android:layout_toEndOf="@+id/space21"
            android:textColor="#1f1f1f"
            android:layout_weight="2"
            android:background="#ffffffff" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:id="@+id/textView11"
            android:layout_weight="9"
            android:background="#ffffffff" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="31dp"
            android:layout_below="@+id/txtQuestion"
            android:layout_alignLeft="@+id/txtQuestion"
            android:layout_alignStart="@+id/txtQuestion"
            android:layout_toLeftOf="@+id/space36"
            android:layout_toStartOf="@+id/space36"
            android:background="#ffffff">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bình luận"
                android:id="@+id/bntCmtQues"
                android:layout_weight="1"
                android:textSize="15sp"
                android:background="#f0f0f0"
                android:textColor="#8a8885" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theo dõi"
                android:id="@+id/bntFollowQues"
                android:layout_weight="1"
                android:textSize="15sp"
                android:background="#f0f0f0"
                android:textColor="#8a8885" />

        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="20px"
        android:layout_height="40px"
        android:layout_below="@+id/txtQuestion"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space3" />
    <!--<com.facebook.login.widget.ProfilePictureView-->
        <!--android:layout_width="35dp"-->
        <!--android:layout_height="35dp"-->
        <!--android:id="@+id/avatarQues"-->
        <!--android:layout_alignTop="@+id/txtNameQuestion"-->
        <!--android:layout_toRightOf="@+id/space16"-->
        <!--android:layout_toEndOf="@+id/space16"></com.facebook.login.widget.ProfilePictureView>-->

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:id="@+id/space16"
        android:layout_below="@+id/space17"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_alignTop="@+id/txtNameQuestion"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/space36" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_below="@+id/avatarQues"
        android:layout_toRightOf="@+id/space3"
        android:layout_toEndOf="@+id/space3"
        android:id="@+id/space17" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_below="@+id/txtNameQuestion"
        android:layout_toRightOf="@+id/space3"
        android:layout_toEndOf="@+id/space3"
        android:id="@+id/space21" />

</RelativeLayout>
