<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#dadada">


    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout7"
        android:layout_below="@+id/space11"
        android:layout_toRightOf="@+id/space12"
        android:layout_toLeftOf="@+id/space37"
        android:layout_toStartOf="@+id/space37">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Name"
            android:id="@+id/txtNameQuestion"
            android:textSize="20dp"
            android:textColor="#1f1f1f"
            android:textStyle="bold"
            android:layout_below="@+id/space16"
            android:layout_toRightOf="@+id/space16"
            android:layout_toEndOf="@+id/space16"
            android:layout_weight="9"
            android:background="#ffffffff" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:id="@+id/textView2"
            android:layout_weight="9"
            android:background="#ffffffff" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9"
            android:background="#ffffffff" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Question"
            android:id="@+id/txtQuestion"
            android:textSize="18dp"
            android:layout_below="@+id/space21"
            android:layout_toRightOf="@+id/space21"
            android:layout_toEndOf="@+id/space21"
            android:textColor="#1f1f1f"
            android:layout_weight="2"
            android:background="#ffffffff" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:id="@+id/textView11"
            android:layout_weight="9"
            android:background="#ffffffff" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="31dp"
            android:layout_below="@+id/txtQuestion"
            android:layout_alignLeft="@+id/txtQuestion"
            android:layout_alignStart="@+id/txtQuestion"
            android:layout_toLeftOf="@+id/space36"
            android:layout_toStartOf="@+id/space36"
            android:background="#ffffff">

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bình luận"
                android:id="@+id/bntCmtQues"
                android:layout_weight="1"
                android:textSize="15sp"
                android:background="#f0f0f0"
                android:textColor="#8a8885" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theo dõi"
                android:id="@+id/bntFollowQues"
                android:layout_weight="1"
                android:textSize="15sp"
                android:background="#f0f0f0"
                android:textColor="#8a8885" />

        </LinearLayout>

    </LinearLayout>

    <Space
        android:layout_width="20px"
        android:layout_height="80px"
        android:layout_centerHorizontal="true"
        android:id="@+id/space"
        android:layout_below="@+id/space11" />

    <ListView
        android:background="#ffffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listAnswer"
        android:layout_above="@+id/linearLayout6"
        android:layout_alignLeft="@+id/linearLayout7"
        android:layout_alignStart="@+id/linearLayout7"
        android:layout_alignRight="@+id/linearLayout7"
        android:layout_alignEnd="@+id/linearLayout7"
        android:layout_below="@+id/textView12" />

    <!--<com.facebook.login.widget.ProfilePictureView-->
        <!--android:layout_width="45dp"-->
        <!--android:layout_height="45dp"-->
        <!--android:id="@+id/avatarQuestionListAns"-->
        <!--android:layout_below="@+id/space12"-->
        <!--android:layout_toRightOf="@+id/space11"-->
        <!--android:layout_toEndOf="@+id/space11"></com.facebook.login.widget.ProfilePictureView>-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout6"
        android:layout_toStartOf="@+id/space25"
        android:background="#f6f6f6"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

        <Space
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.34" />

        <EditText
            android:layout_width="287dp"
            android:layout_height="fill_parent"
            android:id="@+id/txtSend"
            android:layout_gravity="bottom"
            android:textColor="#1f1f1f" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/bntSend"
            android:layout_weight="1"
            android:src="@drawable/messenger_bubble_large_blue"
            android:background="@null" />

    </LinearLayout>

    <Space
        android:layout_width="30px"
        android:layout_height="30px"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/avatarQuestionListAns"
        android:layout_toEndOf="@+id/avatarQuestionListAns"
        android:id="@+id/space12" />

    <Space
        android:layout_width="60px"
        android:layout_height="40px"
        android:id="@+id/space11"
        android:layout_below="@+id/container_toolbar" />

    <Space
        android:layout_width="40px"
        android:layout_height="20px"
        android:id="@+id/space13"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/space11" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:id="@+id/space25"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/space13"
        android:layout_alignEnd="@+id/space13" />

    <Space
        android:layout_width="20px"
        android:layout_height="20px"
        android:layout_alignRight="@+id/space25"
        android:layout_alignEnd="@+id/space25"
        android:layout_below="@+id/space11"
        android:id="@+id/space37" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:id="@+id/textView12"
        android:layout_below="@+id/linearLayout7"
        android:layout_alignLeft="@+id/linearLayout7"
        android:layout_alignStart="@+id/linearLayout7" />

</RelativeLayout>
