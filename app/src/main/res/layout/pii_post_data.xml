<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/txtQuestionData"
        android:textSize="30dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_below="@+id/container_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="52dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Từ cần tra hiện chưa có trong danh mục. Hãy hỏi ý kiến mọi người!"
        android:id="@+id/textView7"
        android:textSize="25dp"
        android:layout_below="@+id/space24"
        android:layout_toRightOf="@+id/space14"
        android:layout_alignRight="@+id/bntPost"
        android:layout_alignEnd="@+id/bntPost" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng"
        android:id="@+id/bntPost"
        android:layout_below="@+id/textView7"
        android:layout_toLeftOf="@+id/space15"
        android:layout_toStartOf="@+id/space15"
        android:background="@color/colorPrimary"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Space
        android:layout_width="40px"
        android:layout_height="20px"
        android:layout_above="@+id/bntPost"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/space14" />

    <Space
        android:layout_width="40px"
        android:layout_height="20px"
        android:layout_above="@+id/bntPost"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/space15" />

    <Space
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_below="@+id/txtQuestionData"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7"
        android:id="@+id/space24" />

    <Space
        android:layout_width="40px"
        android:layout_height="40px"
        android:layout_alignTop="@+id/txtQuestionData"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
