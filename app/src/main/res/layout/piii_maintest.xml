<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffffff">

    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#ffffffff">

        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar" />

    </LinearLayout>

    <Space
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2.5"
        android:background="#ffffffff" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="#ffffffff">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:background="#ffffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Luyện tập"
                    android:id="@+id/textView9"
                    android:textColor="#ff000000"
                    android:textSize="20sp"
                    android:textIsSelectable="false" />

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:scaleType="centerCrop"
                    android:padding="0dp"
                    android:id="@+id/luyentap"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/luyentap"
                    android:layout_margin="20dp"
                    android:background="#ffffffff" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:background="#ffffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Thống kê"
                    android:id="@+id/textView27"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ff000000"
                    android:textSize="20sp"
                    android:textIsSelectable="false" />

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/thongke"
                    android:scaleType="centerCrop"
                    android:padding="0dp"
                    android:src="@mipmap/thongke"
                    android:layout_margin="20dp"
                    android:background="#ffffffff" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:background="#ffffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Kiểm tra"
                    android:id="@+id/textView26"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ff000000"
                    android:textSize="20sp"
                    android:textIsSelectable="false" />

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/kiemtra"
                    android:scaleType="centerCrop"
                    android:padding="0dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/kiemtra"
                    android:layout_margin="20dp"
                    android:background="#ffffffff" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|center_horizontal"
                android:background="#ffffffff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Thêm câu hỏi"
                    android:id="@+id/textView28"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#ff000000"
                    android:scaleType="centerCrop"
                    android:padding="0dp"
                    android:textSize="20sp"
                    android:textIsSelectable="false" />

                <ImageButton
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/themcauhoi"
                    android:src="@mipmap/themcauhoi"
                    android:scaleType="centerCrop"
                    android:padding="0dp"
                    android:layout_margin="20dp"
                    android:background="#ffffffff" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="2.5"
        android:background="#ffffffff" />

</LinearLayout>
